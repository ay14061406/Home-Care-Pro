


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Book a Service</h4>
        <hr />

        <div class="form-group">
            <label for="bookingType" class="control-label">Service:</label>
            <div class="col-md-10">
                <input name="bookingType" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="bookingTime" class="control-label">Date and Time:</label>
            <div class="col-md-10">
                <input name="bookingTime" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-outline-dark" href="@Url.Action("BookingConfirm", "Services")">Book &raquo;</a>
            </div>
        </div>
    </div>


}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
